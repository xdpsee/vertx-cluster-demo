<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pri.zhenhui.demo.todolist.mapper.TodolistMapper">

    <resultMap id="todolistMap" type="pri.zhenhui.demo.todolist.domain.Todolist">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="status" column="status"/>
        <result property="userId" column="user_id"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>

    <insert id="insert" parameterType="pri.zhenhui.demo.todolist.domain.Todolist">
        insert into todolists (
          title,
          status,
          user_id,
          create_at,
          update_at
        ) values (
          #{title},
          #{status},
          #{userId},
          #{createAt},
          #{updateAt}
        );
    </insert>

    <select id="selectByPage" resultMap="todolistMap">
        select * from todolists where user_id = #{userId} limit #{offset}, #{limit}
    </select>

    <update id="update" parameterType="java.util.Map">
        update todolists set update_at = current_timestamp()
        <if test="title!=null">
            , title = #{title}
        </if>
        <if test="status!=null">
            , status = #{status}
        </if>
        where id = #{id}
    </update>
</mapper>
