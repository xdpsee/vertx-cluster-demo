<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pri.zhenhui.demo.account.mapper.AuthorityMapper">

    <resultMap id="authorityMap" type="pri.zhenhui.demo.account.domain.Authority">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>

    <insert id="insert" parameterType="pri.zhenhui.demo.account.domain.Authority" useGeneratedKeys="true"
            keyProperty="id">
        insert into authorities (
          title,
          description,
          create_at,
          update_at
        ) values (
          #{title},
          #{description},
          #{createAt},
          #{updateAt}
        );
    </insert>

    <select id="selectAll" resultMap="authorityMap">
        select * from authorities
    </select>

    <select id="selectByTitles" resultMap="authorityMap">
        select * from authorities where title in
        <foreach collection="titles" item="t" open="(" separator="," close=")">
            #{t}
        </foreach>
    </select>

    <select id="selectByUser" resultMap="authorityMap">
        select * from user_roles ur left join roles r on ur.role_id = r.id where ur.user_id = #{userId}
    </select>

    <update id="update">
        update authorities set update_at = current_timestamp()
        <if test="title!=null">
            , title = #{title}
        </if>
        <if test="description!=null">
            , description = #{description}
        </if>
        where id = #{id}
    </update>

    <insert id="insertRoleAuthorities">
        insert ignore into role_authorities values
        <foreach collection="authorityIds" item="authorityId" separator=",">
            (#{roleId}, #{authorityId})
        </foreach>
    </insert>

    <delete id="deleteRoleAuthorities">
        delete from role_authorities where role_id = #{roleId} and authority_id in
        <foreach collection="authorityIds" item="authorityId" open="(" close=")" separator=",">
            #{authorityId}
        </foreach>
    </delete>
</mapper>

