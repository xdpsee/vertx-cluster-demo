<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pri.zhenhui.demo.account.mapper.RoleMapper">

    <resultMap id="roleMap" type="pri.zhenhui.demo.account.domain.Role">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>

    <insert id="insert" parameterType="pri.zhenhui.demo.account.domain.Role" useGeneratedKeys="true" keyProperty="id">
        insert into users (
          title,
          description,
          create_at,
          update_at
        ) values (
          #{title},
          #{description},
          #{createAt},
          #{updateAt}
        );
    </insert>

    <select id="selectAll" resultMap="roleMap">
        select * from roles
    </select>

    <select id="selectByTitles" resultMap="roleMap">
        select * from roles where title in
        <foreach collection="titles" item="t" open="(" separator="," close=")">
            #{t}
        </foreach>
    </select>

    <select id="selectByUser" resultMap="roleMap">
        select * from user_roles ur left join roles r on ur.role_id = r.id where ur.user_id = #{userId}
    </select>

    <update id="update">
        update roles set update_at = current_timestamp()
        <if test="title!=null">
            , title = #{title}
        </if>
        <if test="description!=null">
            , description = #{description}
        </if>
        where id = #{id}
    </update>

    <insert id="insertUserRoles">
        insert ignore into user_roles values
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

    <delete id="deleteUserRoles">
        delete from user_roles where user_id = #{userId} and role_id in
        <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
            #{roleId}
        </foreach>
    </delete>

</mapper>

