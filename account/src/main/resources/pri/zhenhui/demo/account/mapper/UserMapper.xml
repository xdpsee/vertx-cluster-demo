<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pri.zhenhui.demo.account.mapper.UserMapper">

    <resultMap id="userMap" type="pri.zhenhui.demo.account.domain.User">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="avatar" column="avatar"/>
        <result property="email" column="email"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>

    <insert id="insert" parameterType="pri.zhenhui.demo.account.domain.User">
        insert into users (
          username,
          password,
          avatar,
          email,
          create_at,
          update_at
        ) values (
          #{username},
          #{password},
          #{avatar},
          #{email},
          #{createAt},
          #{updateAt}
        );
    </insert>

    <select id="selectByName" resultMap="userMap">
        select * from users where username = #{username}
    </select>

    <select id="selectByPhone" resultMap="userMap">
        select * from users where phone = #{phone}
    </select>

    <update id="update" parameterType="java.util.Map">
        update users set update_at = current_timestamp()
        <if test="avatar!=null">
            , avatar = #{avatar}
        </if>
        <if test="email!=null">
            , email = #{email}
        </if>
        <if test="password!=null">
            , password = #{password}
        </if>
        where id = #{id}
    </update>
</mapper>
